@model IEnumerable<spor_sitesi.Models.Antrenor>

<h2>Antrenörler</h2>

@if (Model == null || !Model.Any())
{
    <p>Henüz antrenör eklenmemiş.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Uzmanlık Alanı</th>
                <th>Telefon</th>
                <th>Email</th>
                <th>Müsaitlik</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.UzmanlikAlani</td>
                    <td>@item.Telefon</td>
                    <td>@item.Email</td>
                    <td>@item.MusaitlikBilgisi</td>
                </tr>
            }
        </tbody>
    </table>
}
