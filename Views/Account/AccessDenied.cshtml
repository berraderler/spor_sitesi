@{
    ViewData["Title"] = "Erişim Engellendi";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center p-5 shadow-lg rounded-4 bg-white border-top border-5 border-danger" style="max-width: 500px;">

        <div class="display-1 text-danger mb-4">
            <i class="bi bi-shield-lock-fill"></i>
        </div>

        <h1 class="fw-bold text-dark">Erişim Engellendi!</h1>

        <p class="text-muted fs-5 mb-4">
            Üzgünüz, bu sayfayı görüntülemek için gerekli **yetkiye** sahip değilsiniz. Eğer bir hata olduğunu düşünüyorsanız lütfen yöneticinizle iletişime geçin.
        </p>

        <hr class="my-4 opacity-25">

        <div class="d-grid gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg shadow-sm" style="border-radius: 12px; font-weight: 600;">
                <i class="bi bi-house-door-fill me-2"></i> Ana Sayfaya Dön
            </a>

            <button onclick="history.back()" class="btn btn-outline-secondary" style="border-radius: 12px;">
                <i class="bi bi-arrow-left me-2"></i> Geldiğim Sayfaya Git
            </button>
        </div>
    </div>
</div>

<style>
    /* Sayfaya hafif bir hareket katalım */
    .container {
        animation: fadeInUp 0.8s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Kartın üzerine gelince hafif bir parlama efekti */
    .shadow-lg {
        transition: transform 0.3s ease;
    }

        .shadow-lg:hover {
            transform: scale(1.02);
        }
</style>