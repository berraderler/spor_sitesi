@model Spor_web_sitesi.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a asp-action="Index">Hizmetler</a></li>
                    <li class="breadcrumb-item active">Yeni Ekle</li>
                </ol>
            </nav>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="bg-indigo p-4 text-white">
                    <h3 class="mb-0 fw-bold">Hizmet Detayları</h3>
                    <p class="mb-0 text-white-50">Sisteme yeni bir spor branşı tanımlayın.</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Ekle" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Ad" class="form-label fw-bold">Hizmet Adı</label>
                            <input asp-for="Ad" class="form-control form-control-lg bg-light border-0 px-4 rounded-3" placeholder="Örn: Personal Training" />
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="SureDakika" class="form-label fw-bold">Süre (Dakika)</label>
                                <input asp-for="SureDakika" type="number" class="form-control form-control-lg bg-light border-0 px-4 rounded-3" placeholder="60" />
                                <span asp-validation-for="SureDakika" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="Ucret" class="form-label fw-bold">Ücret (₺)</label>
                                <input asp-for="Ucret" type="number" step="0.01" class="form-control form-control-lg bg-light border-0 px-4 rounded-3" placeholder="500" />
                                <span asp-validation-for="Ucret" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid pt-3">
                            <button type="submit" class="btn btn-indigo btn-lg rounded-3 py-3 shadow-sm fw-bold">
                                Hizmeti Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-indigo {
        background-color: #4f46e5;
    }

    .btn-indigo {
        background-color: #4f46e5;
        color: white;
        transition: 0.2s;
    }

        .btn-indigo:hover {
            background-color: #4338ca;
            color: white;
            transform: translateY(-1px);
        }
</style>