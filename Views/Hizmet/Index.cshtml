@model IEnumerable<Spor_web_sitesi.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-indigo">Hizmet Yönetimi</h2>
            <p class="text-muted">Salonun sunduğu spor branşlarını buradan yönetebilirsiniz.</p>
        </div>
        <a asp-action="Ekle" class="btn btn-primary px-4 py-2 shadow-sm rounded-pill">
            <i class="bi bi-plus-lg me-2"></i>Yeni Hizmet Ekle
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 hover-shadow transition">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="bg-indigo-light p-3 rounded-3 text-indigo">
                                <i class="bi bi-award-fill fs-4"></i>
                            </div>
                            <span class="badge bg-success-subtle text-success rounded-pill px-3">Aktif</span>
                        </div>
                        <h4 class="fw-bold mb-1">@item.Ad</h4>
                        <p class="text-muted small">Profesyonel ekipmanlarla @item.SureDakika dakika ders.</p>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <div>
                                <span class="text-muted small d-block">Ücret</span>
                                <span class="fw-bold text-indigo fs-5">@item.Ucret.ToString("C2")</span>
                            </div>
                            <div class="btn-group">
                                <form asp-action="Sil" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu hizmeti silmek istediğinize emin misiniz?')">
                                    <button type="submit" class="btn btn-outline-danger btn-sm border-0 rounded-circle p-2">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .text-indigo {
        color: #4f46e5;
    }

    .bg-indigo-light {
        background-color: #f5f3ff;
    }

    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1) !important;
    }

    .transition {
        transition: all 0.3s ease;
    }
</style>