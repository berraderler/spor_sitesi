@model Spor_web_sitesi.DTOs.Analiz.AnalizEkleViewModel

@{
    ViewData["Title"] = "Yeni Analiz Ekle";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Yeni Analiz Ekle</h5>
                </div>

                <div class="card-body">

                    <form asp-action="Ekle"
                          method="post"
                          enctype="multipart/form-data">

                        <!-- Kilo -->
                        <div class="mb-3">
                            <label asp-for="Kilo" class="form-label fw-semibold">
                                Kilo (kg)
                            </label>
                            <input asp-for="Kilo"
                                   type="number"
                                   step="0.1"
                                   class="form-control"
                                   placeholder="Örn: 65.5" />
                            <span asp-validation-for="Kilo" class="text-danger"></span>
                        </div>

                        <!-- Boy -->
                        <div class="mb-3">
                            <label asp-for="BoyCm" class="form-label fw-semibold">
                                Boy (cm)
                            </label>
                            <input asp-for="BoyCm"
                                   type="number"
                                   class="form-control"
                                   placeholder="Örn: 170" />
                            <span asp-validation-for="BoyCm" class="text-danger"></span>
                        </div>

                        <!-- Görsel -->
                        <div class="mb-3">
                            <label asp-for="Gorsel" class="form-label fw-semibold">
                                Analiz Görseli
                            </label>
                            <input asp-for="Gorsel"
                                   type="file"
                                   class="form-control"
                                   accept="image/*" />
                            <span asp-validation-for="Gorsel" class="text-danger"></span>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index"
                               class="btn btn-outline-secondary">
                                İptal
                            </a>

                            <button type="submit"
                                    class="btn btn-primary">
                                Analiz Et
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>