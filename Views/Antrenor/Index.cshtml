@model IEnumerable<Spor_web_sitesi.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenör Yönetimi";
}

<div class="container py-4">
    <!-- Üst Başlık ve Ekleme Butonu -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">Eğitmen Kadromuz</h2>
            <p class="text-muted">Sistemdeki tüm antrenörleri buradan yönetebilir, yeni eğitmen ekleyebilir veya silebilirsiniz.</p>
        </div>
        <a asp-action="Ekle" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">
            <i class="bi bi-person-plus-fill me-2"></i>Yeni Antrenör Ekle
        </a>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
                <div class="col-12">
                    <div class="alert alert-info text-center py-5 border-0 shadow-sm rounded-4">
                        <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                        <p class="mb-0">Henüz bir antrenör eklenmemiş. Hemen yeni bir tane ekleyerek başlayın!</p>
                    </div>
                </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100 transition-hover">
                                <!-- Profil İkonu / Resim Alanı -->
                                <div class="text-center py-4 bg-light rounded-top-4">
                                    <div class="avatar-circle mx-auto bg-white shadow-sm d-flex align-items-center justify-content-center">
                                        <i class="bi bi-person-bounding-box fs-1 text-primary"></i>
                                    </div>
                                </div>

                                <div class="card-body p-4 text-center">
                                    <h4 class="fw-bold mb-1">@item.AdSoyad</h4>
                                    <span class="badge bg-primary-subtle text-primary rounded-pill px-3 mb-3">@item.UzmanlikAlani</span>
                                    <p class="text-muted small mb-4 line-clamp">@item.Biyografi</p>

                                    <!-- İşlem Butonları -->
                                    <div class="d-flex gap-2 justify-content-center">
                                        <form asp-action="Sil" asp-route-id="@item.Id" method="post" onsubmit="return confirm('@item.AdSoyad isimli eğitmeni silmek istediğinize emin misiniz?')">
                                            <button type="submit" class="btn btn-outline-danger btn-sm px-3 rounded-pill">
                                                <i class="bi bi-trash3-fill me-1"></i>Sil
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
        }
    </div>
</div>

<style>
    .transition-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .transition-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important;
    }
    .avatar-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
    }
    .line-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 3.6em;
    }
    .bg-primary-subtle {
        background-color: #e0e7ff;
    }
</style>