@{
    ViewData["Title"] = "Ana Sayfa - Spor Dünyası";
}

<div class="p-5 mb-4 bg-dark text-white rounded-3 shadow" style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1517836357463-d25dfeac3438?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80'); background-size: cover; background-position: center;">
    <div class="container-fluid py-5 text-center">
        <h1 class="display-3 fw-bold">Sınırlarını Zorla!</h1>
        <p class="col-md-8 fs-4 mx-auto">En profesyonel antrenörler ve modern ekipmanlarla hedeflerine bir adım daha yaklaş.</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            @if(!User.Identity.IsAuthenticated)
            {
                <a asp-action="Register" asp-controller="Account" type="button" class="btn btn-primary btn-lg px-4 me-sm-3 fw-bold">Kayıt Ol</a>
            }
            <a asp-action="Al" asp-controller="Randevu" type="button" class="btn btn-outline-light btn-lg px-4">Randevu Al</a>
        </div>
    </div>
</div>
