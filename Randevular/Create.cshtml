@model spor_sitesi.Models.Randevu
@using spor_sitesi.Models

<h2>Yeni Randevu Oluştur</h2>

<form asp-action="Create" method="post">

    <div>
        <label>Hizmet</label>
        <select asp-for="HizmetId">
            @foreach (var hizmet in (IEnumerable<Hizmet>)ViewBag.Hizmetler)
            {
                <option value="@hizmet.Id">@hizmet.Ad</option>
            }
        </select>
    </div>

    <div>
        <label>Antrenör</label>
        <select asp-for="AntrenorId">
            @foreach (var antrenor in (IEnumerable<Antrenor>)ViewBag.Antrenorler)
            {
                <option value="@antrenor.Id">@antrenor.Ad @antrenor.Soyad</option>
            }
        </select>
    </div>

    <div>
        <label>Tarih</label>
        <input asp-for="Tarih" type="date" />
    </div>

    <div>
        <label>Başlangıç Saati</label>
        <input asp-for="BaslangicSaati" type="time" />
    </div>

    <div>
        <label>Not</label>
        <input asp-for="Not" />
    </div>

    <button type="submit">Kaydet</button>
</form>

<a href="/Randevular">Randevu Listesine Dön</a>
