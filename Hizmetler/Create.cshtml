@model spor_sitesi.Models.Hizmet

<h2>Yeni Hizmet Ekle</h2>

<form asp-action="Create" method="post">

    <div>
        <label>Ad</label>
        <input asp-for="Ad" />
    </div>

    <div>
        <label>Süre (dakika)</label>
        <input asp-for="SureDakika" />
    </div>

    <div>
        <label>Ücret</label>
        <input asp-for="Ucret" />
    </div>

    <div>
        <label>Maksimum Kişi Sayısı</label>
        <input asp-for="MaxKisiSayisi" />
    </div>

    <div>
        <label>Salon Seç</label>
        <input asp-for="SalonId" />
    </div>

    <button type="submit">Kaydet</button>

</form>

<a href="/Hizmetler">Listeye Dön</a>
 